<UserControl x:Class="RFIDApp.Components.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RFIDApp.Components"
             mc:Ignorable="d" 
             >
    <Border DockPanel.Dock="Bottom" BorderBrush="{StaticResource PrimaryColor}" BorderThickness="1" CornerRadius="7">

        <PasswordBox Background="Transparent" BorderThickness="0" BorderBrush="Transparent" x:Name="passwordBox" PasswordChanged="PasswordBox_PasswordChanged" Padding="5" FontSize="16"   />
    </Border>
</UserControl>
